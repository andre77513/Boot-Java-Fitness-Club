<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1" author="andre">
        <preConditions onFail="MARK_RAN" onFailMessage="Já existe a tabela student!">
            <not>
                <tableExists tableName="student" />
            </not>
        </preConditions>

        <createTable tableName="student">
            <column name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_student" />
            </column>
            <column name="name" type="VARCHAR(30)">
                <constraints nullable="false" />
            </column>
            <column name="cpf" type="VARCHAR(11)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="telephone" type="VARCHAR(15)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>

        <addAutoIncrement tableName="student" columnName="id" columnDataType="INT" incrementBy="1" startWith="1" />

    </changeSet>

    <changeSet id="2" author="andre">
        <preConditions onFail="MARK_RAN" onFailMessage="Já existe a tabela personal!">
            <not>
                <tableExists tableName="personal" />
            </not>
        </preConditions>

        <createTable tableName="personal">
            <column name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_personal" />
            </column>
            <column name="name" type="VARCHAR(30)">
                <constraints nullable="false" />
            </column>
            <column name="cpf" type="VARCHAR(11)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="telephone" type="VARCHAR(15)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>

        <addAutoIncrement tableName="personal" columnName="id" columnDataType="INT" incrementBy="1" startWith="1" />

    </changeSet>

    <changeSet id="3" author="andre">
        <preConditions onFail="MARK_RAN" onFailMessage="Já existe a tabela training_sheet!">
            <not>
                <tableExists tableName="training_sheet" />
            </not>
        </preConditions>

        <createTable tableName="training_sheet">
            <column name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tsheet" />
            </column>
            <column name="type" type="VARCHAR(5)">
                <constraints nullable="false" />
            </column>
            <column name="comments" type="VARCHAR(255)"></column>

            <column name="student_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_tsheet_student" referencedTableName="student" referencedColumnNames="id" />
            </column>
            <column name="personal_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_tsheet_personal" referencedTableName="personal" referencedColumnNames="id" />
            </column>
        </createTable>

        <addAutoIncrement tableName="training_sheet" columnName="id" columnDataType="INT" incrementBy="1" startWith="1" />

    </changeSet>

</databaseChangeLog>